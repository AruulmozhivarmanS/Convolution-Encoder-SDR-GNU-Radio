    CONVOLUTION_CODES_LIBRARIES
    NAMES gnuradio-Convolution_Codes
    HINTS $ENV{CONVOLUTION_CODES_DIR}/lib
        ${PC_CONVOLUTION_CODES_LIBDIR}
    PATHS ${CMAKE_INSTALL_PREFIX}/lib
          ${CMAKE_INSTALL_PREFIX}/lib64
          /usr/local/lib
          /usr/local/lib64
          /usr/lib
          /usr/lib64
)

INCLUDE(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(CONVOLUTION_CODES DEFAULT_MSG CONVOLUTION_CODES_LIBRARIES CONVOLUTION_CODES_INCLUDE_DIRS)
