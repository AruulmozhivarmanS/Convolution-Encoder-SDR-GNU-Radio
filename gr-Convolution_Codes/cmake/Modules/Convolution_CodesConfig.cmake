INCLUDE(FindPkgConfig)
PKG_CHECK_MODULES(PC_CONVOLUTION_CODES Convolution_Codes)

FIND_PATH(
    CONVOLUTION_CODES_INCLUDE_DIRS
    NAMES Convolution_Codes/api.h
    HINTS $ENV{CONVOLUTION_CODES_DIR}/include
        ${PC_CONVOLUTION_CODES_INCLUDEDIR}
